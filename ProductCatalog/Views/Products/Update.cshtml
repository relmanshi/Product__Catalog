@using PC.BL;
@model ProductUpdateVM;
@{
    List<SelectListItem> categories = ViewData["Categories"] as List<SelectListItem> ?? new();
}
<h3> Edit your products</h3>
<form asp-action="Update" method="post">

<input type="hidden" asp-for="ProductId"/>
<div class="form-group m-2">
<label asp-for="ProductName">Product Name</label>
<input asp-for="ProductName" class="form-control"/>
<span class="text-danger" asp-validation-for="ProductName"></span>
</div>

    <div class="form-group m-2">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="form-group m-2">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" class="form-control" />
        <span class="text-danger" asp-validation-for="StartDate"></span>
    </div>
    <div class="form-group m-2">
        <label asp-for="Duration">Duration</label>
        <input asp-for="Duration" class="form-control" />
        <span class="text-danger" asp-validation-for="Duration"></span>
    </div>

    <div class="form-group m-2">
        <label asp-for="CategoryId">Category Id</label>
        <input asp-for="CategoryId" class="form-control" />
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>
    <div class="d-flex justify-content-center">
    <button class="btn btn-primary">Update</button>
    </div>
</form>

